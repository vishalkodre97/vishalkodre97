<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book Store Application</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggler navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/images/freeLogo.jpeg" width="30" height="30" />
                    Book Store
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex flex-sm-row-reverse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-outline-primary">Login</a>
                            <a class="btn btn-primary">Register</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item active">
                            <a class="nav-link text-dark" href="/">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item text-dark">
                            <a class="nav-link" href="/home/aboutus">About</a>
                        </li>
                        <li class="nav-item text-dark">
                            <a class="nav-link" href="/home/contactus">Contact</a>
                        </li>

                        <li class="nav-item text-dark">
                            <a class="nav-link" href="/books/GetAllBooks">All Books</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenet render -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-top fixed-bottom footer text-muted font-small blue">
        <div class="footer-copyright text-center py-2">
            Copyright © Book Store @DateTime.Now.Year
        </div>
    </footer>
</body>
</html>
