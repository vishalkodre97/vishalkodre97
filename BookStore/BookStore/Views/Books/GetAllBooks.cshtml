@*@model IEnumerable<BookModel>*@

<div class="container">
    <h3 class="display-4">All Books</h3>
    <hr/>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="/@item.CoverImageUrl" class="img-thumbnail" alt="Alternate Text" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-route="BookDetails" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View Detail</a>
                            </div>
                            <small class="text-muted">@item.Author</small>
                        </div>
                    </div>
                </div> 
            </div>
        }

    </div>
</div>

