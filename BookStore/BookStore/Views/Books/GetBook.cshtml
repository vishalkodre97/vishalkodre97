@model BookModel

<div class="container">
    <div class="display-4">Book Details</div>
    <div class="row">
        <div class="col-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i==0 ? "active":"")"></li>
                    }
                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <div class="@(i==0? "carousel-item active":"carousel-item")">
                            <img class="d-block w-100 h-50" src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/booksImage/cover/dummyImage.jpg" : Model.CoverImageUrl)" alt="@Model.Gallery[i].Name" />
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-6">
            <div class="row">
                <div class="col-md-12">
                    @Model.Title
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="form-label label-primary">By:</span>
                    <span class="monospaced">@Model.Author</span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p class="discription">@Model.Description</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <a class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModalLong">Read now</a>
                </div>
            </div>
            <hr />
            <ul class="list-group">
                <li class="list-group-item"><span class="font-weight-bold">Catagory - </span>@Model.Catagory</li>
                <li class="list-group-item"><span class="font-weight-bold">Total pages - </span>@Model.TotalPages</li>
                <li class="list-group-item"><span class="font-weight-bold">Language - </span>@Model.Language</li>
            </ul>
        </div>
    </div>

   

    <!-- Modal -->
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Read Book</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body h-100">
                    <iframe src="@Model.BookPdfURL" class="w-100"></iframe>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>                    
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="py-5 bg-light">
        <h3 class="h3">Simmiler books</h3>
        <div class="row">
            @for (int i = 0; i < 5; i++)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="100%" xmlns="http://www.w3.org/2000/svg"></svg>
                        <div class="card-body">
                            <h5 class="card-title">Title</h5>
                            <p class="card-text">Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/Books/GetBook" class="btn btn-sm btn-outline-secondary">View Detail</a>
                                </div>
                                <small class="text-muted">Author</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
