@model BookModel;

@{
    ViewData["Title"] = "AddNewBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h3 class="display-4">Add New Book</h3>
    <hr/>
    @if (ViewBag.IsSuccess==true)
    {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Books</strong> Book added successfully
        <a asp-controller="Books" asp-action="GetBook" asp-route-id="@ViewBag.Id"
           class="btn btn-sm btn-outline-secondary">Click Check Your Book</a>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    }
 
<form asp-action="AddNewBook" asp-controller="Books" method="post">
    <div class="form-group">
        <label asp-for="LanguageId" class="control-label"></label>
        <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.Language">
            <option>Please chose your language</option>
        </select>
        <span asp-validation-for="LanguageId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Catagory"></label>
        <input asp-for="Catagory" class="form-control" />
        <span asp-validation-for="Catagory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" />
        &nbsp;<span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalPages"></label>
        <input asp-for="TotalPages" class="form-control" />
        <span asp-validation-for="TotalPages" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Add book" class="btn btn-primary btn" />
    </div>

</form>
        </div>
  

